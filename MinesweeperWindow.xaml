<Window x:Class="WPF_Minesweeper_Game.MinesweeperWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Minesweeper_Game"
        mc:Ignorable="d"
        Title="Minesweeper" Height="600" Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="400" />
        </Grid.RowDefinitions>

        <!-- Timer/Mine bar -->
        <Grid Grid.Row="0">
            <Rectangle Grid.Row="0" Fill="LightGray"/>
            <Rectangle Grid.Row="0" Grid.Column="1" Fill="LightGray"/>
            <TextBlock x:Name="tb_MinesDisplay" Width="150" Height="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock x:Name="tb_TimeDisplay" Grid.Column="1" Width="150" Height="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="225"/>
                <ColumnDefinition Width="225"/>
            </Grid.ColumnDefinitions>
        </Grid>

        <!-- Reset Button bar -->
        <Rectangle Grid.Row="1" Fill="LightGray"/>
        <Button x:Name="btn_ResetGame" Click="btn_ResetGame_Click" Content="Play again" Height="25" Width="80" Foreground="White" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" BorderBrush="#FFF6F6F6" FontFamily="Bodoni MT Black"/>

        <!-- Minesweeper pane-->
        <Grid Grid.Row="2">
            <Rectangle Fill="LightGray" Grid.RowSpan="1" Grid.ColumnSpan="1"/>
            <UniformGrid x:Name="ug_GameBoard" Rows="9" Columns="9" Margin="15">
             </UniformGrid>
        </Grid>
    </Grid>

</Window>
